/*
Program for
A Simple Calculator
By Freddy
*/
#include <stdio.h>
#include <stdlib.h>
void main()
{
    int a,b;
    char c;
    clrscr();
    while(1)
    {
	 printf("\n1.Add\n2.Subtract\n3.Multiply\n4.Divide\n5.Modulus\n6.Exit");
	 printf("\nFirst num: ");
	 scanf("%d",&a);
	 printf("Second num: ");
	 scanf("%d",&b);
	 printf("Choose an option: ");
	 scanf(" %c",&c);
	 switch(c)
	 {
	       case'1':
		    c=a+b;
		    break;
	       case'2':
		    c=a-b;
		    break;
	       case'3':
		    c=a*b;
		    break;
	       case'4':
		    c=a/b;
		    break;
	       case'5':
		    c=a%b;
		    break;
	       case'6':
		    exit(1);
		    break;
	       default:
		    printf("INVALID!!");
	  }
    printf("\nResult : %d",c);
    }
    getch();
}    
